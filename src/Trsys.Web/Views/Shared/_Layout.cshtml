<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        * {
            margin: 0;
            border: 0;
            padding: 0;
            box-sizing: border-box;
        }

        input, button, select, .btn {
            font-size: 1rem;
            min-height: 2rem;
            border-radius: 0.25rem 0.25rem;
            padding: 0.1rem 0.5rem;
        }

        button, .btn {
            font-size: 1rem;
            line-height: 1rem;
            border: solid 2px #efefef;
            background: #efefef;
            color: black;
            text-decoration: none;
        }

            button:disabled, .btn:disabled {
                color: #999;
                border: solid 2px #fefefe;
                background: #fefefe;
            }

            input:focus, button:focus, select:focus, .btn:focus {
                outline-offset: 1px;
                outline: 1px solid #3ebeff;
            }

        input, select {
            display: block;
            width: 100%;
            border: 1px solid #adadad;
        }

        button.primary {
            background-color: rebeccapurple;
            color: white;
        }

        button.danger {
            background-color: #ff8787;
            color: black;
        }

        hearder {
            display: block;
            background-color: rebeccapurple;
            color: white;
            padding: 1.45rem 1.0875rem;
        }

        main {
            padding: 1.45rem 1.0875rem;
        }

        table {
            width: 100%;
        }

        table, tr, th, td {
            border-collapse: collapse;
            border: 1px solid #adadad;
        }

        th, td {
            padding: 0.5rem;
        }

        .alert {
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            border: 1px solid #adadad;
        }

        .alert-danger {
            border-color: #ff8787;
            background-color: #ffeded;
            color: #884242;
        }

        .alert-success {
            border-color: #87ff87;
            background-color: #edffed;
            color: #428842;
        }

        .d-block {
            display: block;
        }

        .d-flex {
            display: flex;
        }

        .flex-grow-1 {
            flex-grow: 1;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .align-items-center {
            align-items: center;
        }

        .align-items-end {
            align-items: flex-end;
        }

        .border-0 {
            border: 0;
            outline: 0;
        }

        .p-1 {
            padding: 0.25rem;
        }

        .pl-1 {
            padding-left: 0.25rem;
        }

        .pr-1 {
            padding-right: 0.25rem;
        }

        .p-2 {
            padding: 0.5rem;
        }

        .pr-2 {
            padding-right: 0.5rem;
        }

        .p-3 {
            padding: 1rem;
        }

        .p-4 {
            padding: 2rem;
        }

        .m-1 {
            margin: 0.25rem;
        }

        .m-2 {
            margin: 0.5rem;
        }

        .m-3 {
            margin: 1rem;
        }

        .m-4 {
            margin: 2rem;
        }

        .mr-1 {
            margin-bottom: 0.25rem;
        }

        .mr-2 {
            margin-bottom: 0.5rem;
        }

        .mr-3 {
            margin-bottom: 1rem;
        }

        .mr-4 {
            margin-bottom: 2rem;
        }

        .mb-1 {
            margin-bottom: 0.25rem;
        }

        .mb-2 {
            margin-bottom: 0.5rem;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .mb-4 {
            margin-bottom: 2rem;
        }

        .w-full {
            width: 100%;
        }
    </style>
</head>
<body>
    <hearder class="d-flex justify-content-between align-items-center">
        <h1><a href="/" style="color: white; text-decoration: none">Trsys</a></h1>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex align-items-center">
                <div class="pr-1">
                    <a href="/changePassword" class="btn">パスワード変更</a>
                </div>
                <div class="pl-1">
                    <form method="post" action="/logout">
                        <button>ログアウト</button>
                    </form>
                </div>
            </div>
        }
    </hearder>
    <main>
        @RenderBody()
    </main>
</body>
</html>
