@model Trsys.Web.ViewModels.Home.ChangePasswordViewModel

@{
    ViewBag.Title = "パスワード変更";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mb-4">
        @Model.ErrorMessage
    </div>
}

<h1 class="mb-3">パスワード変更</h1>

<form method="post">
    <div style="max-width: 40rem">
        <div class="mb-3">
            <label>パスワード</label>
            <input type="password" name="Password" value="@Model.Password" />
        </div>
        <div class="mb-3">
            <label>パスワード(確認用)</label>
            <input type="password" name="PasswordConfirm" value="@Model.PasswordConfirm" />
        </div>
        <div>
            <button class="primary">変更</button>
        </div>
    </div>
</form>