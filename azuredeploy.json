{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Name of storage account and prefix for containers."
            },
            "defaultValue": "trsyslt"
        },
        "instances": {
            "type": "int",
            "metadata": {
                "description": "Number of slaves"
            },
            "defaultValue": 5
        },
        "locustfile": {
            "type": "string",
            "metadata": {
                "description": "Url for locust file."
            },
            "defaultValue": "https://raw.githubusercontent.com/chameleonhead/trsys/loadtesting/locustfile.py"
        }
    },
    "variables": {
        "locustImage": "locustio/locust:1.1.1",
        "prefix": "[parameters('prefix')]",
        "locustfile": "[parameters('locustfile')]",
        "containerDns": "[concat(variables('prefix'),'-master')]",
        "containerMasterGroup": "[concat(variables('prefix'),'-master')]",
        "containerMasterName": "master",
        "containerMasterImage": "[variables('locustImage')]",
        "containerSlaveGroup": "[concat(variables('prefix'),'-slave')]",
        "containerSlaveName": "slave",
        "containerSlaveImage": "[variables('locustImage')]",
        "containerMasterAddress": "[concat(variables('containerDns'), '.', resourceGroup().location, '.azurecontainer.io')]",
        "containerMasterUrl": "[concat('http://', variables('containerMasterAddress'), ':8089')]"
    },
    "resources": [
        {
            "name": "[variables('containerMasterGroup')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[variables('containerMasterName')]",
                        "properties": {
                            "image": "[variables('containerMasterImage')]",
                            "command": [
                                "bash",
                                "-c",
                                "[concat('curl ', variables('locustfile'), ' -o locustfile.py', ';', 'locust --master --host https://')]"
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 2
                                }
                            },
                            "ports": [
                                {
                                    "port": 8089
                                },
                                {
                                    "port": 5557
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "tcp",
                            "port": 8089
                        },
                        {
                            "protocol": "tcp",
                            "port": 5557
                        }
                    ],
                    "dnsNameLabel": "[variables('containerDns')]"
                }
            }
        },
        {
            "name": "[concat(variables('containerSlaveGroup'), '-', copyIndex())]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerInstance/containerGroups/', variables('containerMasterGroup'))]"
            ],
            "copy": {
                "name": "slavecopy",
                "count": "[parameters('instances')]"
            },
            "properties": {
                "containers": [
                    {
                        "name": "[variables('containerSlaveName')]",
                        "properties": {
                            "image": "[variables('containerSlaveImage')]",
                            "command": [
                                "bash",
                                "-c",
                                "[concat('curl ', variables('locustfile'), ' -o locustfile.py', ';', 'locust --worker --master-host ', variables('containerMasterAddress'))]"
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 0.5
                                }
                            }
                        }
                    }
                ],
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "prefix": {
            "type": "string",
            "value": "[variables('prefix')]"
        },
        "url": {
            "type": "string",
            "value": "[variables('containerMasterUrl')]"
        }
    }
}